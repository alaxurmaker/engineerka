@model IEnumerable<Eregister.Group>

@{
    ViewBag.Title = "Index";
}

<h2 style="text-align:center">Zarządzaj grupami</h2>

<p>
    @Html.ActionLink("Nowy", "Create")
</p>

<div class="box">
    <div class="box-header with-border">
        <h3 class="box-title">Grupy</h3>
    </div>
    <div class="box-body">
        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th>Grupa</th>
                    <th>Rocznik</th>
                    <th>Krótki opis</th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Year)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ShortDescription)
                        </td>
                        <td>
                            @*@Html.ActionLink("Szczegóły", "IndexDetails", new { id = item.GroupID }) |*@
                            @Html.ActionLink("Więcej", "CreateClass", new { id = item.GroupID }) |
                            @Html.ActionLink("Edytuj", "Edit", new { id = item.GroupID }) |
                            @if (item.OwnsEducator == false)
                            {
                                @Html.ActionLink("Przypisz", "Assign", new { id = item.GroupID });
                            }                            
                            @Html.ActionLink("Usuń", "Delete", new { id = item.GroupID })
                        </td>
                    </tr>
                }              
            </tbody>
        </table>
    </div>
</div>