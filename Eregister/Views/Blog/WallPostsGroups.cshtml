@model BlogViewModel
@using Eregister.Controllers
@using Models
@{
    
    ViewBag.Title = "WallPostsGroups";
    //Layout = "~/Views/Shared/_Layout.cshtml";
    var categories = BlogController.checkCatList;
    var tags = BlogController.checkTagList;
}

<div class="blogContainer">

    <div><h2>Witaj na stronie swojej grupy :)</h2></div>

   <div class="mainblogview">

        @{Html.RenderPartial("WallPostsGroupsContent", Model.PagedBlogViewModel);}

