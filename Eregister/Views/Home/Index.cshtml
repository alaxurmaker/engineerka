@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="4000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/Content/images/schl3.jpg" alt="ASP.NET" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Zapraszamy do nawiązania współpracy z naszą szkołą. Naprawdę warto!
                    <a class="btn btn-default" href="/Home/Contact">
                        Dowiedz się więcej
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/Content/images/schl2.jpg" alt="Visual Studio" class="img-responsive" />
        </div>
        <div class="item">
            <img src="~/Content/images/schl1.jpg" alt="Package Management" class="img-responsive" />
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Poprzedni</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Następny</span>
    </a>
</div>

<div class="row">
    <div class="col-md-4" style="padding-top: 40px;">
        <div class="box box-solid" style="height: 316px">
            <div class="box-header with-border">
                <h2 class="box-title" style="display: flex; justify-content: center; align-items: center;">Nasza szkoła</h2>
            </div>
            <div class="box-body" style="margin-left: 30px; margin-right: 30px; margin-top: 10px; font-size: 16px;">
                <br /> Witamy na naszej stronie. Mamy nadzieję, że dzięki
                <br /> niej zarówno rodzice, jak i uczniowie będą mogli bardziej
                <br /> zaangażować się w życie placówki.
            </div>
        </div>
    </div>

    <div class="col-md-4" style="padding-top: 40px;">
        <div class="box box-solid" style="height: 316px">
            <div class="box-header with-border">
                <h3 class="box-title" style="display: flex; justify-content: center; align-items: center;">Dlaczego my?</h3>
            </div>
            <div class="box-body" style="margin:5px;">
                <div id="carousel-example-generic" class="carousel slide" data-ride="carousel" data-interval="3000">
                    <ol class="carousel-indicators">
                        <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                        <li data-target="#carousel-example-generic" data-slide-to="1" class=""></li>
                        <li data-target="#carousel-example-generic" data-slide-to="2" class=""></li>
                    </ol>
                    <div class="carousel-inner">
                        <div class="item active">
                            <img src="http://placehold.it/900x500/39CCCC/ffffff&amp;text=Najwyższy+poziom+zdawalności" alt="First slide">
                        </div>
                        <div class="item">
                            <img src="http://placehold.it/900x500/3c8dbc/ffffff&amp;text=Najnowocześniejsze+wyposażenie" alt="Second slide">
                        </div>
                        <div class="item">
                            <img src="http://placehold.it/900x500/f39c12/ffffff&amp;text=5+miejse+w+województwie" alt="Third slide">
                        </div>
                    </div>
                    <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
                        <span class="fa fa-angle-left"></span>
                    </a>
                    <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
                        <span class="fa fa-angle-right"></span>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4" style="padding-top: 40px;">
        <div class="box box-solid" style="height: 316px">
            <div class="box-header with-border">
                <h2 class="box-title" style="display: flex; justify-content: center; align-items: center;">Lokalne sukcesy</h2>
            </div>
            <div class="box-body" style="margin-left: 30px; margin-right: 30px; margin-top: 10px; font-size: 16px;">
                <br /> Miło nam poinformować, że uczniowie naszej szkoły zdobyli
                <br /> I miejsce
                <br /> w Regionalnym Przeglądzie Widowisk  Bożonarodzeniowych,
                <img src="https://images.vexels.com/media/users/3/129153/isolated/lists/da985521b2ffcbb95a2ca9d3c9f39afa-1st-place-laurel-badge.png" style="float:right;height: 150px; width: 150px;"   />
            </div>
        </div>
    </div>
