@model Eregister.Models.LoginViewModel

<h2>Logowanie</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js)")" type="text/html"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js)")" type="text/html">
</script>

    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)

        
            <legend>Enter user credentials</legend>

            <div class="label">
                @Html.LabelFor(model => model.Login)
            </div>
            <div>
                @Html.EditorFor(model => model.Login)
                @Html.ValidationMessageFor(model => model.Login)
            </div>

            <div class="label">
                @Html.LabelFor(model => model.Password)
            </div>
            <div>
                @Html.EditorFor(model => model.Password)
                @Html.ValidationMessageFor(model => model.Password)
            </div>

            <p>
            <input type="submit" value="Create" />
            </p>

      

    }
